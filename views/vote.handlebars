<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          {{#each Players}}
          <img src="{{this.selection}}" alt="">

          <form action="/api/vote" method="POST" class="vote-form">
            <button class="vote" type="submit">
              Vote
            </button>
          </form>

          {{/each}}

        </div>
      </div>
    </div>
  </div>
</div>