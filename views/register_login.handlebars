  <div id="auth-form">
    <h2 class="auth-title">{{cardTitle}}</h2>
        <div class="card">
          <div class="card-body">
            <!-- Makes POST request to /login or register route -->
                  <form action={{formAction}} method="POST">
                <div class="form-group">
                  <label for="username">Username</label>
                  <input type="username" class="form-control" name="username" value={{username}}>
                  <span class="help-block">{{usernameErr}}</span>
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" name="password">
                    <span class="help-block">{{passwordErr}}</span>
                </div>
                <button type="submit" class="btn btn-dark">{{typeSubmit}}</button>
                <a href="{{redirectUrl}}">{{redirectText}}</a>
              </form>

          </div>
    </div>
  </div>
</div>

